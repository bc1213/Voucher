<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/SignIN"
            android:fontFamily="sans-serif"
            android:textColor="#ffff"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="@string/Des_msg"
            android:textColor="#ffff"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/enterCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:visibility="gone"
            android:text="@string/Enter_code"
            android:textColor="#ffff"
            android:textSize="15dp"/>

        <com.g12.apple.customviews.PinEntryEditText
            android:id="@+id/pinEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/enterCode"
            android:layout_margin="20dp"
            android:clickable="true"
            android:cursorVisible="false"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="4"
            android:textIsSelectable="false"
            android:visibility="visible"/>

        <Button
            android:id="@+id/submit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/pinEntry"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:text="OK"
            android:textColor="@color/colorText"
            android:textStyle="bold"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/llAnimation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/submit"
            android:layout_margin="20dp"
            android:gravity="center"
            android:visibility="invisible"
            android:weightSum="5">

            <ImageView
                android:id="@+id/imgMob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_phone_android_black_24dp"/>


            <com.g12.apple.customviews.HorizontalDottedProgress
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:layout_weight="1"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/imgWifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_wifi_black_24dp"/>

            <com.g12.apple.customviews.HorizontalDottedProgress
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imgTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_airplay_black_24dp"/>


        </LinearLayout>

        <TextView
            android:id="@+id/tvSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llAnimation"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="@string/search_wifi"
            android:textColor="#3F51B5"
            android:textSize="15dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/status"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_below="@id/tvSearch"
            android:textColor="@color/colorText"/>

    </RelativeLayout>
</RelativeLayout>